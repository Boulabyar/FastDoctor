<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp2ndDoct"
    android:orientation="vertical"
    android:background="@drawable/backg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_back"
            android:background="#00ffffff"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/etat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/etat"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="-50dp"
            android:layout_gravity="center"
            android:text="2/2"
            android:fontFamily="@font/black_ops_one"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/block_general"
            android:orientation="vertical">

            <TextView
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/jockey_one"
                android:text="Création du compte"
                android:textColor="#000000"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/add_patient"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_marginTop="-90dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_add_doctor" />

            <View
                android:id="@+id/divider"
                android:layout_width="170dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#AFA9AA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="Sexe "
                android:textColor="#000000"
                android:textSize="20sp" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="-45dp">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Homme" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Femme" />
            </RadioGroup>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_float_add_tof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-90dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                app:elevation="15dp"
                app:srcCompat="@drawable/ic_add_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:text="Photo"
                android:textColor="#000000"
                android:textSize="15sp" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_float_add_diplom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                app:elevation="15dp"
                app:srcCompat="@drawable/ic_diplom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-25dp"
                android:text="Date naissance "
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:text="Diplome"
                android:textColor="#000000"
                android:textSize="15sp" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="190dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-55dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:spinnersShown="true" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="20dp"
                android:hint="  Mot de passe"
                android:textColorHint="#555454"

                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_key"
                    android:inputType="textPassword"
                    android:textColor="#171717"
                    android:textColorLink="#070707"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_mdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="  Confirmer mot de passe"
                android:textColorHint="#555454"

                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_key"
                    android:inputType="textPassword"
                    android:textColor="#171717"
                    android:textColorLink="#070707"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_creer_compte"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#25D3E5"
                android:elevation="20dp"
                android:text="Créer"
                android:textColorLink="#000000" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>